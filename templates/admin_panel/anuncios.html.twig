{% extends 'base.html.twig' %}

{% block title %}Admin - {{ parent() }}{% endblock %}
{% block javascripts %}
{{ parent() }}
{% endblock %}
{% block body %}

    <div class="container-fluid" id="todo">
        <div class="row justify-content-center align-items-center">
            <table class="table table-hover table-sm">
                <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Anuncio
                    </th>
                    <th>
                        Creador
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Foto
                    </th>
                    <th>
                        Editar
                    </th>
                    <th>
                        Subir
                    </th>
                    <th>
                        Borrar
                    </th>
                </tr>
                </thead>

                {% for post in pagination %}
                    <tr class="table-dark">
                        <td>
                            {{ post.id }}

                        </td>
                        <td>
                            <a class="nav-link" href='{{path('veranuncio',{id:post.id})}}'>{{ post.titulo }}</a>
                        </td>
                        <td>
                            {{ post.nombre }}
                        </td>
                        <td>
                            null
                        </td>
                        <td>
                        <img class="foto rounded" src="{{ asset('uploads/fotos/'~post.fotos) }}" width="40px">
                        </td>
                        <td>
                            <button class="btn btn-primary py-0">
                                <img src="{{ asset('img/bx-trash.svg')  }}" class='bx nav_icon px-3'>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <hr>
            <div class="container-fluid bg-new border-primary">

                <h5>Anuncios mostrados: {{ pagination|length }} de {{ anuncios|length }}</h5>
            </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}

<script src="{{ asset('js/adminmenu.js')  }}" type="text/javascript"></script>

{% endblock %}